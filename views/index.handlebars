<div class="container-fluid">
  <div class="row">
    <div class="col-12 text-center" id="authDiv">
      <img src="images/fresh 4.png">
      <h1 class="lead">Offer or Obtain</h1>
      {{!-- These buttons trigger modal forms --}}
      <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#regModal">register</button>
      <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModal3">sign-in</button>
    </div>
  </div>
  <hr>
  
<!-- Login Modal -->
<div class="modal fade" id="exampleModal3" tabindex="-1" role="dialog" aria-labelledby="exampleModal3Label"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModal3Label">Login</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="login-page">
                    <div class="form">
                        <form class="login-form">
                            <input type="text" placeholder="EMail" id="email">
                            <input type="password" placeholder="password" id="password">
                            <button id="loginSubmitBtn">login</button>
                            <p class="message">Not registered? <a href="#">Create an account</a></p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Registration Modal -->
<div class="modal fade bd-example-modal-xl" id="regModal" tabindex="-1" role="dialog" aria-labelledby="myHugeModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content" style='background-color:rgb(106, 195, 255);'>
            <img src="/images/fresh 4.png" class="center" alt="rip xd" width="128" height="128">
            <div class="container">
                <form>
                   <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputName">Name</label>
                            <input type="text" class="form-control" id="inputName" placeholder="first and last name">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Email</label>
                            <input type="email" class="form-control" id="inputEmail" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputPassword">Password</label>
                            <input type="text" class="form-control" id="inputPassword">
                        </div>
                    </div>
                                         
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputPhone">Phone Number</label>
                            <input type="text" class="form-control" id="inputPhone">
                            <!-- <p id="phoneNumText" class="lead">Please input as 1234567 instead of 123-4567</p> -->
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputAddress">Address</label>
                        <input type="text" class="form-control" id="inputAddress" placeholder="address">
                    </div>
                    <div class="form-group">
                        <label for="inputCity">City</label>
                        <input type="text" class="form-control" id="inputCity" placeholder="city">
                    </div>
                    <div class="form-group">
                        <label for="inputState">State</label>
                        <input type="text" class="form-control" id="inputState" placeholder="state">
                    </div>
                    <div class="form-group">
                        <label for="inputZip">Zip</label>
                        <input type="text" class="form-control" id="inputZip" placeholder="zip">
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <button type="button" id="regSubmitBtn" data-dismiss="modal" class="btn btn-secondary">Submit</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>