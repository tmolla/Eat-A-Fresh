<div class="row" id="detailInfoDiv">
  <div class="col-md-3">
    <div class="card m-3">
      <img src="/images/fresh 4.png" class="card-img-top" alt="logo">
      <div class="card-body">
        {{#with user}}
          <p class="card-title">{{Name}}</p>
          <p class="card-text">
            <hr class="mb-0" style="background-color: #990000">
            <h5>Address:</h5>
            <h5 id="userAddress">{{Address}}</h5>
            <div class="d-inline-block">
              <h5 id="userCity">{{City}}</h5>  
            </div>        
            <div class="d-inline-block">
              <h5 id="userState">{{State}}</h5>
            </div>
            <div class="d-inline-block">
              <h5 id="userZip">{{Zip}}</h5>
            </div>
            <hr class="mb-0" style="background-color: #990000">
            <h5 id="userEmail">Email: {{EMail}}</h5>
            <h5 id="userPhone">Phone: {{Phone}}</h5>
          </p>
        {{/with}}
        <div class="card-footer col-12 text-center mt-4">
          <button type="submit" class="btn btn-secondary" id="btnLogoff">Log off</button>
          <button type="button" class="btn btn-secondary" id="btnUpdateInfo" data-toggle="modal"
            data-target="#updateModal">
            Update
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-9">
    <div class="row">
      <form class="form-inline m-3" style="color: Yellow; font-size:x-large" id="harvest">
        <div class="form-group">
          <span class="m-3">
          <label for="iputHarvest">Harvest</label>
          <select class="custom-select" id="iputHarvest">
            {{#each harvest}}
            <option value="'" {{id}}"'">{{type}}</option>
            {{/each}}
          </select>
          </span>
          <span class="m-3">
            <label for="inputQuantity">Quantity (in lb)</label>
            <input type="text" class="form-control" id="inputQuantity" placeholder="1">
          </span>
          <span class="m-3">
          <div class="custom-control custom-radio">
            <input type="radio" id="customRadio1" name="customRadio" class="custom-control-input">
            <label class="custom-control-label" for="customRadio1">Share</label>
          </div>
          <div class="custom-control custom-radio">
            <input type="radio" id="customRadio2" name="customRadio" class="custom-control-input">
            <label class="custom-control-label" for="customRadio2">Accept</label>
          </div>
          </span>
          <span>
            <label for="textComment">Comment</label>
            <textarea class="form-control pt-2" id="textComment" rows="2"></textarea>
          </span>
          <button type="submit" class="btn btn-secondary mx-3" id="btnHarvest">Submit</button>
        </div>
      </form>
    </div>
    <hr class="m-4" style="border: 1px solid red">
    <div calss="row">
      <div class="card-columns m-3">
        {{#if logs}}
        {{#each logs}}
        {{>logs/log-block }}
        {{/each}}
        {{/if}}
      </div>
    </div>
  </div>
</div>
</div>

<!-- update Modal -->
<div class="modal" id="updateModal" style="opacity:0.8" tabindex="-1" role="dialog" aria-labelledby="updateModalCenteredLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" style='background-color:rgb(106, 195, 255);'>
      {{!-- <div class="modal-content"> --}}
      <div class="modal-header">
        <span class=" col-12 text-center"><img src="/images/fresh 4.png" class="center" alt="rip xd" width="128"
            height="128">
          <p class="modal-title" id="updateModalCenteredLabel">Update Member</p>
        </span>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="inputName">Name</label>
              <input type="text" class="form-control" id="inputName" placeholder="first and last name">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-12">
              <label for="inputEmail">Email</label>
              <input type="email" class="form-control" id="inputEmail" placeholder="Email">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputPassword">Password</label>
              <input type="text" class="form-control" id="inputPassword">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputPhone">Phone Number</label>
              <input type="text" class="form-control" id="inputPhone">
            </div>
          </div>
          <div class="form-group">
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control" id="inputAddress" placeholder="address">
          </div>
          <div class="form-group">
            <label for="inputCity">City</label>
            <input type="text" class="form-control" id="inputCity" placeholder="city">
          </div>
          <div class="form-group">
            <label for="inputState">State</label>
            <input type="text" class="form-control" id="inputState" placeholder="state">
          </div>
          <div class="form-group">
            <label for="inputZip">Zip</label>
            <input type="text" class="form-control" id="inputZip" placeholder="zip">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-secondary" id="btnUpdateSubmit">Save changes</button>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>